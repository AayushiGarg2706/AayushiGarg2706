<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logischtech.mytalentapp.Know"
    android:id="@+id/fragment_childLayoutA1"
    android:clickable="true"
    android:gravity="left"
    android:layout_marginTop="0dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/slogo"
        android:background="#ffffff"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        android:id="@+id/imageView"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/exam1eng"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="0dp"
        android:layout_height="360dp" />
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/eng2"
        android:layout_marginTop="20dp"

        android:layout_height="360dp" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/eng3"
            android:layout_marginTop="20dp"
            android:layout_height="360dp" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/eng4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="90dp"
            android:layout_height="360dp" />

<Button
    android:layout_width="match_parent"
    android:background="#EC724D"
    android:textColor="#ffffff"
    android:id="@+id/btngetstarted"
    android:layout_marginLeft="20dp"
    android:text = "@string/btngetStarted"

    android:layout_marginRight="20dp"
    android:layout_marginTop="-60dp"
    android:layout_marginBottom="100dp"
    android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>


</FrameLayout>
